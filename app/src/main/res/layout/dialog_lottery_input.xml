<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f2"
    android:clickable="false"
    android:focusable="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_6"
        android:src="@mipmap/ic_lottery_key_cuprum" />

    <EditText
        android:id="@+id/live_watcher_chat_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/white"
        android:digits="123456789"
        android:gravity="center"
        android:hint="请输入次数"
        android:imeOptions="flagNoExtractUi"
        android:inputType="number"
        android:maxLength="2"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/text_color_66"
        android:textColorHint="@color/text_color_88"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_weight="1"
        android:text="个"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/lottery_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/bg_full_circle_2"
        android:padding="@dimen/dp_8"
        android:text="开始抽奖"
        android:textColor="@color/white"
        android:textSize="14sp" />


</LinearLayout>