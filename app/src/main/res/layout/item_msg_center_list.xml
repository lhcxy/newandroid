<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/item_avatar_iv"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_12">

        <ImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_msg_center_system" />


        <TextView
            android:id="@+id/item_unread_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_red_circle"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_avatar_iv"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@id/item_avatar_iv"
        android:text="系统通知"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title_tv"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_toRightOf="@id/item_avatar_iv"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#ff999999"
        android:textSize="12sp"
        tools:text="我是一条消息我是一条消息我是一条消息我是..." />

    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_avatar_iv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="#ff999999"
        android:textSize="12sp"
        tools:text="昨天" />
</RelativeLayout>