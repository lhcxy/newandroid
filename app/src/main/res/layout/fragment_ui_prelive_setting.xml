    <RelativeLayout
        android:id="@+id/prelive_setting_pixel_title_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="直播效果"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/prelive_setting_pixel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_8"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />

        <TextView
            android:id="@+id/prelive_setting_pixel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toLeftOf="@id/prelive_setting_pixel_iv"
            android:text="标清"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/prelive_setting_pixel_gp_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/prelive_setting_pixel_xxxh_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="高清"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/prelive_setting_pixel_xxh_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="标清"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/prelive_setting_pixel_xh_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="流畅"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/prelive_setting_pixel_h_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="低清"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/prelive_setting_net_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="上传节点"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/prelive_setting_net_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_8"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />

        <TextView
            android:id="@+id/prelive_setting_net_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toLeftOf="@id/prelive_setting_net_iv"
            android:text="默认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/prelive_setting_net_gp_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/prelive_setting_net_def_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="默认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/prelive_setting_net_outside_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="海外"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
