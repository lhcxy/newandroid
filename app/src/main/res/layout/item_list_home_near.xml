<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
    >

    <com.yunbao.phonelive.custom.SquareImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/live_type"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/live_type"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_live_hot"
        />


    <ImageView
        android:id="@+id/icon_loaction"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_location_2"
        />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon_loaction"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@id/icon_loaction"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_marginBottom="-3dp"
        />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/city"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/city"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/icon_loaction"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="12sp"
        />


</RelativeLayout>