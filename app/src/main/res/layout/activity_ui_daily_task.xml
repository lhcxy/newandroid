<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/subtitle_new_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle_new_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_16"
                android:text="新手任务"
                android:textColor="@color/text_color_333"
                android:textSize="@dimen/sp_14" />

            <View
                android:id="@+id/subtitle_new_line_v"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="@drawable/bg_circle_00bb56" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/subtitle_daily_task_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle_daily_task_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:text="日常任务"
                android:textColor="@color/text_color_88"
                android:textSize="@dimen/sp_14"
                />

            <View
                android:id="@+id/subtitle_daily_task_line_v"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="@drawable/bg_circle_00bb56"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <com.yunbao.phonelive.ui.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recyclerView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

</LinearLayout>