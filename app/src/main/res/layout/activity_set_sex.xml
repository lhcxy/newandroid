<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <include layout="@layout/view_title"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <com.yunbao.phonelive.custom.DrawableRadioButton
            android:id="@+id/nan"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:onClick="setSexClick"
            android:text="@string/sex_nan"
            android:textSize="16sp"
            app:top_drawable="@drawable/bg_set_sex_male"
            app:top_drawableSize="90dp"
            android:textColor="@color/fg_btn_set_sex"
            android:clickable="true"
            />

        <com.yunbao.phonelive.custom.DrawableRadioButton
            android:id="@+id/nv"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:button="@null"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:onClick="setSexClick"
            android:text="@string/sex_nv"
            android:textSize="16sp"
            app:top_drawable="@drawable/bg_set_sex_female"
            app:top_drawableSize="90dp"
            android:textColor="@color/fg_btn_set_sex"
            android:clickable="true"
            />
    </RadioGroup>


</RelativeLayout>