<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccc"
    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        >

        <ImageView
            android:id="@+id/headImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/anchor_level"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/headImg"
            android:layout_alignRight="@id/headImg"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/headImg"
            android:textColor="#000"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/icon_loaction"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/name"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_location"
            />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon_loaction"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/icon_loaction"
            android:textColor="#737373"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:text="@string/watching_live"
            android:textColor="#737373"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/text"
            android:textColor="#737373"
            android:textSize="14sp"
            />



    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="96dp"
        android:layout_below="@+id/top"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/isVideo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/img"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_live_hot"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/img"
        android:background="#fff"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/live_type"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        />

    <ImageView
        android:id="@+id/game"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        />
</RelativeLayout>