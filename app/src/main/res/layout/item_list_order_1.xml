<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="160dp"
    >

    <ImageView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_list_01_bg"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        />

    <ImageView
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/icon_list_01"
        android:translationX="-9dp"
        />

    <LinearLayout
        android:id="@+id/name_group"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@id/head"
        android:layout_centerInParent="true"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/level"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_group"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/lineColor"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/btn_attention"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_list_attention"
        android:gravity="center"
        android:textColor="@color/fg_list_2"
        android:textSize="12sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e2e2e2"
        />
</RelativeLayout>