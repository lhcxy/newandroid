<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                android:topLeftRadius="180dp"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
            <padding android:bottom="@dimen/dp_6" android:top="@dimen/dp_6" android:left="@dimen/dp_32" android:right="@dimen/dp_24" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                android:topLeftRadius="180dp"
                android:bottomLeftRadius="180dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"/>
            <padding android:bottom="@dimen/dp_6" android:top="@dimen/dp_6" android:left="@dimen/dp_32" android:right="@dimen/dp_24" />
            <solid android:color="@color/app_selected_color"/>
        </shape>
    </item>
</selector>